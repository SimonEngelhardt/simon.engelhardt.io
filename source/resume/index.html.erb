---
title: Simon Engelhardt
subtitle: Résumé
---

<div data-magellan-expedition="fixed" data-options="destination_threshold:60;" class="hide-for-print">
  <dl class="sub-nav">
    <dd data-magellan-arrival="experience">
      <a href="#experience">
        Experience
      </a>
      <div class="progress" dir="rtl">
        <span class="meter"></span>
      </div>
    </dd>
    <dd data-magellan-arrival="education">
      <a href="#education">
        Education
      </a>
      <div class="progress" dir="rtl">
        <span class="meter"></span>
      </div>
    </dd>
    <dd data-magellan-arrival="info" class="hide-for-small-only">
      <a href="#info">
        Info
      </a>
      <div class="progress" dir="rtl">
        <span class="meter"></span>
      </div>
    </dd>
    <dd data-magellan-arrival="projects">
      <a href="#projects">
        Selected Projects
      </a>
      <div class="progress" dir="rtl">
        <span class="meter"></span>
      </div>
    </dd>
  </dl>
</div>
<div ng-app="resumeApp" ng-cloak>
  <div id="experience" ng-controller="ExperienceCtrl" class="section experiences" data-magellan-destination="experience" se-scroll-progress-meter='[data-magellan-arrival="experience"] .progress .meter'>
    <h2>Experience</h2>
    <ul class="no-bullet">
      <li ng-repeat="experience in primaryExperiences" class="experience" ng-include="'/resume/partials/experience.html'">
      </li>
    </ul>
    <div class="extended-content hide-for-print" ng-class="{'collapsed': !secondaryExperiencesVisible}">
      <a ng-click="secondaryExperiencesVisible = !secondaryExperiencesVisible" trigger-scroll-onclick class="expand-button">
        <i class="fa" ng-class="{'fa-angle-right': !secondaryExperiencesVisible, 'fa-angle-down': secondaryExperiencesVisible}"></i>
        Secondary (earlier and part-time) work experience
      </a>
      <ul ng-show="secondaryExperiencesVisible" class="no-bullet">
        <li ng-repeat="experience in secondaryExperiences" class="experience" ng-include="'/resume/partials/experience.html'">
        </li>
      </ul>
    </div>
  </div>
  <div id="education" ng-controller="EducationCtrl" class="section" data-magellan-destination="education" se-scroll-progress-meter='[data-magellan-arrival="education"] .progress .meter'>
    <h2>Education</h2>
    <ul class="no-bullet">
      <li ng-repeat="education in educations" class="education">
        <h3>
          {{education.degree}}, {{education.field}}
          <small><a href="{{education.url}}" target="_blank">{{education.school}}</a></small>
        </h3>
        <div class="timeline" ng-show="education.years">
          <span ng-repeat="year in allYears" class="year" ng-style="{width: 100/allYears.length + '%'}" ng-class="{active: education.years.indexOf(year) !== -1, first: education.years.indexOf(year) === 0, last: education.years.indexOf(year) === education.years.length - 1}">{{year}}</span>
        </div>
        <p class="details">
          {{education.start.toDate() | date:'yyyy'}} – {{education.end.toDate() | date:'yyyy'}}, {{education.location}}
        </p>
        <p>
          {{education.description}}
        </p>
        <div ng-if="education.thesis">
          <strong>Thesis: <em>{{education.thesis}}</em></strong>
          <p>
            {{education.thesisdescription}}
          </p>
        </div>
      </li>
    </ul>
  </div>
  <div id="info" ng-controller="InfoCtrl" class="section" data-magellan-destination="info" se-scroll-progress-meter='[data-magellan-arrival="info"] .progress .meter'>
    <h2>Info</h2>
    <ul class="no-bullet">
      <li class="fi-marker" title="Location">
        <div class="location">
          New York City <small>Authorized to work in the US</small>
        </div>
      </li>
      <li class="fi-power" title="Birthday">
        {{birthdate.toDate() | date}} (age {{age}})
      </li>
      <li class="fi-male-female" title="Maritial Status">
        Married
      </li>
      <li class="fi-flag" title="Languages">
        <ul class="languages no-bullet">
          <li>
            English, Danish <small>Native or bilingual proficiency</small>
          </li>
          <li>
            German <small>Limited working proficiency</small>
          </li>
          <li>
            French, Spanish <small>Elementary proficiency</small>
          </li>
        </ul>
      </li>
    </ul>
  </div>
  <div id="projects" ng-controller="ProjectsCtrl" class="section" data-magellan-destination="projects" se-scroll-progress-meter='[data-magellan-arrival="projects"] .progress .meter'>
    <h2>Selected Projects</h2>
    <form class="filters">
      <label>
        Filter by my role<br/>
        <select ng-model="selectedRole" ng-options="role for role in roles" class="large-4 medium-5"></select>
      </label>
    </form>
    <ul class="no-bullet">
      <li ng-repeat="project in projects | filter:roleFilter" class="project">
        <h3>{{project.client}} <small>{{project.title}}</small></h3>
        <small class="url">
          <a href="{{project.url}}" target="_blank" title="{{project.urlnote}}">
            <img ng-if="project.icon" ng-src="{{project.icon}}" alt="Web site icon">
            {{project.url}}
          </a>
        </small>
        <div class="timeline" ng-show="project.years">
          <span ng-repeat="year in allYears" class="year" ng-style="{width: 100/allYears.length + '%'}" ng-class="{active: project.years.indexOf(year) !== -1, first: project.years.indexOf(year) === 0, last: project.years.indexOf(year) === project.years.length - 1}">{{year}}</span>
        </div>
        <p ng-bind-html="project.description"></p>
        <div ng-if="project.extendeddescription" class="extended-content" ng-class="{'collapsed': !project.extendedDescriptionVisible}">
          <a ng-click="project.extendedDescriptionVisible = !project.extendedDescriptionVisible" trigger-scroll-onclick class="expand-button">
            <i class="fa" ng-class="{'fa-angle-right': !project.extendedDescriptionVisible, 'fa-angle-down': project.extendedDescriptionVisible}"></i>
            Further description
          </a>
          <p ng-show="project.extendedDescriptionVisible" ng-bind-html="project.extendeddescription"></p>
        </div>
        <h4>My Roles</h4>
        <p class="tags">
          <span ng-repeat="role in project.roles" class="label secondary">
            {{role}}
          </span>
        </p>
        <h4>Tech</h4>
        <p class="tags">
          <span ng-repeat="tech in project.techAndServices" class="label secondary">
            {{tech}}
          </span>
        </p>
      </li>
    </ul>
    <div id="skill-drop" data-dropdown-content class="f-dropdown content skill">
      <strong>
        {{selectedSkill.name}}
        <small>{{selectedSkill.category}}</small>
      </strong>
      Level <odometer value="selectedSkill.level || 0"></odometer> / {{maxSkillLevel}}
      <div class="progress">
        <span class="meter" ng-style="{width: selectedSkill.level / maxSkillLevel * 100 + '%'}"></span>
      </div>
      <a href="/resume/skills?highlight={{selectedSkill.name}}#{{removeWhiteSpace(selectedSkill.category)}}" target="_self">Show all skills</a>
    </div>
  </div>
</div>

<% content_for :footer do %>
<p>
  <small><i class="fi-print"></i> This résumé <a href="javascript:window.print()">prints</a> nicely to PDF or on paper.</small>
</p>
<p>
  <a href="#top" title="Back to top"><i class="fa fa-angle-up"></i></a>
</p>
<% end %>
